#!/usr/bin/env bash
# Update package list and install nginx
sudo apt-get update
sudo apt-get install -y nginx

# Start nginx (it usually starts automatically after installation, but this ensures it's running)
sudo service nginx start

# Create a default index.html file with "Hello World!" message
echo Hello World! | sudo tee /var/www/html/index.html

# Ensure nginx is listening on port 80 (default)
sudo sed -i 's/80 default_server/80/' /etc/nginx/sites-available/default

# Reload nginx configuration
sudo service nginx reload
