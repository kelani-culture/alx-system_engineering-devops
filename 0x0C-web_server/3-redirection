#!/usr/bin/env bash
# Step 1: Install Nginx (if not already installed)
if ! command -v nginx &> /dev/null; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Step 2: Create a backup of the default configuration
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Step 3: Use sed to replace a line with multiple lines
sudo sed -i '/location \/ {/c\        location \/redirect_me {\n            return 301 https:\/\/informationisbeautiful.net;\n        }' /etc/nginx/sites-available/default

# Step 4: Restart Nginx to apply the changes
sudo systemctl restart nginx
