#!/usr/bin/env bash

#redirect permanently
redirect="server {\n    listen 80;\n    server_name _;\n    root /var/www/html\n    location /redirect_me/ {\n\t\t return 301 https://regex101.com;\n    }\n}"
old_value="^server\s{.*\n.*\n.*\n}$"

sudo sed -e "/$old_value/c\\
$redirect" /etc/nginx/conf.d/default.conf

sudo service nginx restart